(in-package :cl-diagram-user)

(defparameter *uml-transition-label-font*  nil)
(defparameter *uml-transition-label-class* nil)

;-------------------------------------------------------------------------------
;
; class uml-transition-label
;
;-------------------------------------------------------------------------------
(defclass uml-transition-label ()
  ((trigger		;:type     (or keyword string)
				:initform nil
				:initarg  :trigger
				:accessor uml-transition-label-trigger)
   (condition	;:type     (or keyword string)
				:initform nil
				:initarg  :condition
				:accessor uml-transition-label-condition)
   (action		;:type     (or keyword string)
				:initform nil
				:initarg  :action
				:accessor uml-transition-label-action)
   (class		;:type     (or keyword string)
				:initform nil
				:initarg  :class
				:accessor uml-transition-label-class)
   (font		;:type     (or nil font-info)
				:initform nil
				:initarg  :font
				:accessor uml-transition-label-font)))


